<%- include('../../partials/header.ejs'); %>
<%- include('../../partials/navbar.ejs'); %>
<body>    
    <br>
    <div class="container">
        <form action="/artigos/salvar" method="post">
            <div class="card">
                <div class="card-header">
                <h3>Cadastra Artigos</h3>
                </div>
                <div class="card-body">
                  <label for="">Selecione um Categoria</label>
                  <select name="category" class="form-control" >
                    <% dadosCategoria.forEach(function(dadosCategoria){ %>
                   <option value="<%= dadosCategoria.id %>"> <%= dadosCategoria.titulo %> </option>
                   
                   <% }) %>
                  </select><br>
                   <input type="text" name="titulo" placeholder="Titulo Artigo" class="form-control"><br>
                   <textarea name="texto" class="form-control" id="txtEditor"></textarea><br>                 
                                         
                   <button class="btn btn-primary">Salvar</button>
                </div>
              </div>
        </form>
    </div>
</body>




<%- include('../../partials/footer.ejs') %>


<script src="/tinymce/tinymce.min.js"></script>
<script>
    tinymce.init({
      language: 'pt_BR',    
      selector: '#txtEditor',     
      height: 300,
    plugins: [
    'advlist autolink link image lists charmap print preview hr anchor pagebreak',
      'searchreplace wordcount visualblocks visualchars code fullscreen insertdatetime media nonbreaking',
      'table emoticons template paste help'
    ],
    });
</script>